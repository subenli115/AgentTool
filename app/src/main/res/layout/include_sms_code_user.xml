<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    >
    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_login_code"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        />

    <EditText
        android:id="@+id/et_sms_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-2dp"
        android:layout_toRightOf="@+id/iv_code"
        android:layout_toLeftOf="@+id/tv_sms_getcode"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/phone_code_intput"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/textColor_999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sms_getcode"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:background="@drawable/normal_bg_oranage_fe"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="@string/sign_get_code"
        android:textColor="@color/textColor_999"
        android:textSize="14sp"/>

</RelativeLayout>